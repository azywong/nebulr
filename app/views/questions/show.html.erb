<%= @question.text %>
  <% if @question %>
    <ul>
      <% @question.answers.each do |answer| %>
        <li><%= answer.text %>
          <br />
          <%= answer.votes.map(&:value).reduce(:+) %>
          <br />
          <% if answer.user_id == session[:id] %>
          <% else %>
            <%= button_to "upvote", question_answer_votes_path(@question, answer, value: 1) %>
            <%= button_to "downvote", question_answer_votes_path(@question, answer, value: -1) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

<% if @question.user_id == session[:id] %>
<% else %>
  <%= form_for ([@question, @answer]), html: {class: "answer_form"} do |f| %>
    <%= f.text_area :text %>
    <%= f.submit "Answer" %>
  <% end %>
<% end %>